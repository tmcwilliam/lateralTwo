/[if IE 8] <html class="no-js lt-ie9" lang="en">
:plain
  <!--[if gt IE 8] -->
%html{:lang => "en"}
  /<![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= data.page.title || "Middleman/Foundation"
    / Included CSS Files
    = stylesheet_link_tag "app"
    = stylesheet_link_tag "lateral"
    = javascript_include_tag "foundation/modernizr.foundation"

  %body{:class => page_classes}
    .row
      .eight.columns
        %h2 Middleman / Foundation
      .four.columns
        %p Social Icons
      %hr

      %ul
        %li{nav_active("index")}= link_to 'Home', '/'
        %li{nav_active("about")}= link_to 'About', '/about.html'
        %li{nav_active("services")}= link_to 'Services', '/services.html'

      %hr

      .twelve.columns
        %nav.top-bar
          %ul
            %li.name
            %li.toggle-topbar
              %a(href="#")
          %section
            %ul.left
              %li
                %a(href="#")
                  test
            %ul.right
              %li
                %a(href="#")
                  Link
    = yield
    / Application Javascript, safe to override
    = javascript_include_tag "app"
    = javascript_include_tag "main"

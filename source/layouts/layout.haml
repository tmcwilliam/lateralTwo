/[if IE 8] <html class="no-js lt-ie9" lang="en">
:plain
  <!--[if gt IE 8] -->
%html{:lang => "en"}
  /<![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= data.page.title || "Middleman/Foundation"
    / Included CSS Files
    = stylesheet_link_tag "app"
    = stylesheet_link_tag "fonts"
    = stylesheet_link_tag "colors"
    = stylesheet_link_tag "lateral"
    = javascript_include_tag "foundation/modernizr.foundation"

  %body{:class => page_classes}
    .row.header
      .six.columns
        %img{:src => "/images/branding/logo.png", :alt => "Lateral Fitness Chicago"}
      .three.columns.header_social
        %ul.headline_socials.main_socials
          %li
            %a.ico_social-facebook{:href => "#"}
          %li
            %a.ico_social-delicious{:href => "#"}
          %li
            %a.ico_social-tumbler{:href => "#"}
          %li
            %a.ico_social-twitter{:href => "#"}

    .row.navigation
      .twelve.columns
        %nav.top-bar
          %ul
            %li.name
            %li.toggle-topbar
              %a(href="#")
          %section
            %ul.left
              %li
                = link_to 'Home', '/'
              %li
                = link_to 'About', '/about.html'
              %li
                = link_to 'Pricing', '/pricing.html'
              %li
                = link_to 'Services', '/services.html'
              %li
                = link_to 'Trainers', '/trainers.html'
              %li
                = link_to 'Sample', '/sample.html'
            %ul.right
              %li
                = link_to 'Schedule a Class', '#'
    
    = yield

    %footer.row
      .footer_wrapper.twelve.columns
        = link_to 'Lateral Fitness Chicago', '/', :class => "logo"
        %ul.footer_socials.main_socials
          %li 
            %a{:href => "/", :class => "ico_social-facebook", "original-title" => "Facebook"}
          %li 
            %a{:href => "/", :class => "ico_social-vimeo", "original-title" => "Vimeo"}
        %span
          314 West Superior LL-E Chicago, IL 60654 - 312-291-9466
    / Application Javascript, safe to override
    = javascript_include_tag "app"
    = javascript_include_tag "main"

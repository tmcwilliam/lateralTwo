/[if IE 8] <html class="no-js lt-ie9" lang="en">
:plain
  <!--[if gt IE 8] -->
%html{:lang => "en"}
  /<![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= data.page.title || "Lateral Fitness - Chicago boutique fitness gym"
    %meta{:name => "description", :content => data.page.description || "Lateral Fitness is a boutique gym located in the River North neighborhood of Chicago Illinois featuring Muscle Activation Technique, Endurance Training, Group Classes and Personal Training"}
    / Included CSS Files
    = stylesheet_link_tag "app"
    = stylesheet_link_tag "fonts"
    = stylesheet_link_tag "font-awesome"
    = stylesheet_link_tag "colors"
    = stylesheet_link_tag "lateral"
    = javascript_include_tag "foundation/modernizr.foundation"

  %body{:class => page_classes}
    .show-for-small{:role => "complementary", :id => "sidebar"}
      %nav{:role => "navigation", :id => "sideMenu"}
        %ul{:class => "nav-bar", :id => "sideMainNav"}
          %li{nav_active("home")}
            = link_to 'Home', '/'
          %li{nav_active("about")}
            = link_to 'About', '/about.html'
          %li{nav_active("pricing")}
            = link_to 'Pricing', '/pricing.html'
          %li{nav_active("services")}
            = link_to 'Services', '/services.html'
          %li{nav_active("instructors")}
            = link_to 'Instructors', '/instructors.html'
          %li{nav_active("contact")}
            = link_to 'Contact Us', '/contact.html'
          %li
            = link_to 'Schedule a Class', 'http://clients.mindbodyonline.com/ws.asp?studioid=33786&stype=41'
          %li
            = link_to 'Facebook Page', 'https://www.facebook.com/LATERALFITNESS'
    %section.main-content{:role => "main"}
      .row.header
        .mobile-one.columns.show-for-small
          %a{:href => "#sidebar", :class => "sidebar-button", :id => "sidebarButton"}
            %i.icon-reorder
        .eight.mobile-three.columns
          %a{:href => "/"}
            %img{:src => "/images/branding/logo.png", :alt => "Lateral Fitness Chicago"}
        .four.columns.header_social.hide-for-small
          %ul.headline_socials.main_socials
            %li 
              %a{:href => "https://www.facebook.com/LATERALFITNESS", :class => "facebook", :target => "_blank"}
                %i.icon-facebook-sign
          %p.phone
            Feel free to call us: 312-291-9466

      .row.navigation.hide-for-small
        .twelve.columns
          %nav.top-bar
            %ul
              %li.name
              %li.toggle-topbar
                %a(href="#")
            %section
              %ul.nav-links
                %li{nav_active("home")}
                  = link_to 'Home', '/'
                %li{nav_active("about")}
                  = link_to 'About', '/about'
                %li{nav_active("pricing")}
                  = link_to 'Pricing', '/pricing.html'
                %li.has-dropdown{nav_active("services")}
                  = link_to 'Services', '/services.html'
                  %ul.dropdown.nav-dropdown
                    %li
                      = link_to 'Muscle Activation Technique', '/services/muscle-activation-technique'
                    %li
                      = link_to 'Endurance Training', '/services/endurance-training'
                    %li
                      = link_to 'Group Classes', '/services/group-classes'
                    %li
                      = link_to 'Personal Training', '/services/personal-training'
                %li.has-dropdown{nav_active("instructors")}
                  = link_to 'Instructors', '/instructors.html'
                  %ul.dropdown.nav-dropdown
                    %li
                      = link_to 'Scott McWilliam', '/instructors/scott-mcwilliam'
                    %li
                      = link_to 'Erik Marthaler', '/instructors/erik-marthaler'
                    %li
                      = link_to 'Charlie Cates', '/instructors/charlie-cates'
                    %li
                      = link_to 'Becky Williamson', '/instructors/becky-williamson'
                    %li
                      = link_to 'Adrienne Marie', '/instructors/adrienne-marie'
                    %li
                      = link_to 'Daniel Lona', '/instructors/daniel-lona'
                    %li
                      = link_to 'Rebecca Niziol', '/instructors/rebecca-niziol'
                    %li
                      = link_to 'Katarina Arneric', '/instructors/katarina-arneric'
                    %li
                      = link_to 'Jenny Finkel', '/instructors/jenny-finkel'
                    %li
                      = link_to 'Sarah Elizabeth Helt', '/instructors/sarah-elizabeth-helt'
                    %li
                      = link_to 'Rachel Jannsen', '/instructors/rachel-jannsen'
                %li{nav_active("contact")}
                  = link_to 'Contact Us', '/contact.html'
              %ul.right
                %li
                  = link_to "<i class='icon-calendar'></i>Schedule a Class", 'http://clients.mindbodyonline.com/ws.asp?studioid=33786&stype=41', :target => '_blank'
          
      = yield

      %footer.row
        .seven.columns
          %a{:href => "/"}
            %img{:src => "/images/branding/logo.png", :alt => "Lateral Fitness Chicago", :width => "250", :height => "48", :class => 'hide-for-small'}
        .five.columns.address
          314 West Superior LL-E 
          %i.icon-circle 
          Chicago, IL 60654
          %i.icon-circle
          312-291-9466
    
    = javascript_include_tag "app"
    = javascript_include_tag "main"

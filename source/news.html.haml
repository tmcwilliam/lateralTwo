---
title: Lateral Fitness Chicago
page_id: news
---

.row
  .large-8.columns
    %h4.page-title Upcoming Events
    - data.lateral.events.each do |e|
      .row.event
        .large-12.columns
          %h5.name= e.name
          %p.subheader.date= e.date
          = link_to "#{e.link}", :target => "_blank" do
            = image_tag "/images/events/#{e.image}", :class => "th"
          %p.body= e.body
          = link_to "#{e.link}", :target => "_blank" do
            Read more
            %i.icon-chevron-right.small
      %hr.dark

    %h4.page-title Press
    - data.lateral.press.each do |p|
      .row.event
        .large-12.columns
          %h5.name= p.name
          %p.subheader.date= p.date
          = link_to "#{p.link}", :target => "_blank" do
            = image_tag "/images/events/#{p.image}", :class => "th"
          %p.body= p.body
          = link_to "#{p.link}", :target => "_blank" do
            Read more
            %i.icon-chevron-right.small
      %hr.dark

  .large-4.columns.photos
    %h4.page-title Past Events
    %ul{:class => "large-block-grid-1 past-events"}
      - data.lateral.pastevents.each do |p|
        %li
          %h6.name= p.name
          %p.subheader.date.small= p.date
          = link_to "#{p.link}", :target => "_blank", :class => "thumb" do
            = image_tag "/images/events/#{p.image}", :class => "th"
          %p.body.small= p.body
    %h6
      %i.fa.fa-camera
      Check our some photos
    %ul{:class => "clearing-thumbs small-block-grid-3", :data => {:clearing => ""}}
      - data.lateral.photos.each do |t|
        %li
          = link_to "/images/gallery/#{t.filename}" do
            = image_tag "/images/gallery/#{t.filename}"

